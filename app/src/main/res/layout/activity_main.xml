<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">





    <EditText
        android:id="@+id/bascevresi"
        android:hint="Baş çevresi bilgileri giriniz"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="150dp"
        />

    <EditText
        android:id="@+id/boy"
        android:hint="Boy bilgisini giriniz"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/bascevresi"
        android:layout_marginVertical="14dp"
        />

    <EditText
        android:id="@+id/kilo"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/boy"
        android:layout_marginVertical="14dp"
        android:hint="Kilo bilgisi giriniz"

        />
    <EditText
        android:id="@+id/ay"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/kilo"
        android:layout_marginVertical="14dp"
        android:hint="Kaç aylık olduğunu giriniz"

        />

    <Button
        android:id="@+id/bttn"
        android:text="Hesapla"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/ay"
        android:layout_marginVertical="14dp"
         />

    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/bttn"
        android:layout_marginVertical="14dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>